<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00B6A5"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/bimg"
                android:layout_width="113dp"
                android:layout_height="224dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@color/colorAccent"
                tools:layout_editor_absoluteX="-4dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/bookName"
                android:layout_width="187dp"
                android:layout_height="91dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="8dp"
                android:paddingLeft="3dp"
                android:text="Hiding Name"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.148"
                app:layout_constraintStart_toEndOf="@+id/bimg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.031" />

            <TextView
                android:id="@+id/Level"
                android:layout_width="127dp"
                android:layout_height="27dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="72dp"
                android:paddingLeft="3dp"
                android:text="Level"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/bookName"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/bookName"
                app:layout_constraintTop_toBottomOf="@+id/bookName"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/info"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="22dp"
                android:paddingLeft="3dp"
                android:text="description of Book"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/Level"
                app:layout_constraintTop_toBottomOf="@+id/Level" />

            <Button
                android:id="@+id/button"
                android:layout_width="111dp"
                android:layout_height="32dp"
                android:layout_marginTop="23dp"
                android:background="@color/btncolor"
                android:padding="5dp"
                android:text="Button"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info" />

            <ImageView
                android:id="@+id/forwordArrow"
                android:layout_width="26dp"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="52dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.01999998"
                app:srcCompat="@drawable/nextarrow" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>